<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="utf-8" />
	    <title>PUSH / @ViewBag.Title</title>
		@Styles.Render("~/Content/css")
		@RenderSection("CSS", false)
		<script src="@Url.Content("~/Scripts/jquery-1.8.2.min.js")" type="text/javascript"></script>
		<script src="@Url.Content("~/Scripts/angular/angular.min.js")" type="text/javascript"></script>
		<script src="@Url.Content("~/Scripts/angular/ui/ui-grid/ui-grid.js")" type="text/javascript"></script>
		<script src="@Url.Content("~/Scripts/angular/ui/ui-grid/ui-grid-column-resizer.js")" type="text/javascript"></script>
		<script src="@Url.Content("~/Scripts/angular/ui/ui-bootstrap.js")" type="text/javascript"></script>
		<script src="@Url.Content("~/Scripts/PushUI/pushUI.js")" type="text/javascript"></script>
		<script src="@Url.Content("~/Scripts/PushUI/pushUI.util.js")" type="text/javascript"></script>
		@Scripts.Render("~/bundles/modernizr")
	</head>
	<body>
		<header>
			<div class="content-wrapper">
				<div class="float-left">
					<p class="site-title">@Html.ActionLink("Concord PUSH", "Index", "Home")</p>
				</div>
				<div class="float-right">
					<section id="login">
					   Hello, <span class="username">@User.Identity.Name</span>!
					</section>
					<nav>
						<ul id="menu">
							<li>@Html.ActionLink("Home", "Index", "Home")</li>
							<li>@Html.ActionLink("About", "About", "Home")</li>
							<li>@Html.ActionLink("Contact", "Contact", "Home")</li>
						</ul>
					</nav>
				</div>
			</div>
		</header>
	    <div id="body">
	        <section id="dialog">
			    <div id="pushUiErrors"></div>
		    </section>
	        @RenderSection("featured", required: false)
	        <section class="content-wrapper main-content clear-fix">
	            @RenderBody()
	        </section>
	    </div>
		<footer>
			<div class="content-wrapper">
				<div class="float-left">
					<p>&copy; @DateTime.Now.Year - Concord PUSH tools</p>
				</div>
			</div>
		</footer>

		@Scripts.Render("~/bundles/jquery")
		@RenderSection("scripts", false)
	</body>
</html>
